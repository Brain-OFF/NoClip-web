{% extends 'baseback.html.twig' %}
{% block body %}
    <div class="card-body">
    <h4 class="card-title">coach </h4>
    <div class="table-responsive">
    <div align="center">
    <a href="{{ path('addcoach') }}" class="badge badge-outline-success"  >add</a>
    </div>

    {{ form_start(formSearch,{'attr': {'novalidate': 'novalidate'}} ) }}
    {{ form_widget(formSearch.name,{'class':'form-control'},)}}
    {{ form_widget(formSearch.search, {'attr': {'placeholder': 'REGISTER','class':'btn btn-primary' }})}}
    {{ form_end(formSearch) }}


    <table class="table">
        <thead>
        <tr>
            <th> Id  </th>
            <th> name </th>
            <th> last name </th>
            <th> rank </th>
            <th> categorie  </th>

            <th> update  </th>
            <th> delete  </th>
        </tr>
        </thead>
        <tbody>
        <tr>
            {% for i in tabcoach %}
            <td>{{ i.id }} </td>
            <td>{{ i.name }} </td>
            <td> {{ i.lastname }} </td>
            <td> {{ i.rank }} </td>
            <td> {{ i.categorie }}  </td>



            <td>
                <a href="{{ path('modifycoach',{'id':i.id}) }}" class="badge badge-outline-warning" >Update</a>

            </td>
            <td>
                <a href="{{ path('removecoach',{'id':i.id }) }}" class="badge badge-outline-danger" >Remove</a>

            </td>
        </tr>


        {% endfor %}
    </table>

{% endblock %}