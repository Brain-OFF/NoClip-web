{% extends 'baseback.html.twig' %}

{% block title %}Hello GamesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div align="center">
        <a href="{{ path('addgames') }}" class="badge badge-outline-success"  >add</a>
    </div>
    <div class="example-wrapper">
        <h1>games cat</h1>


        <table border="5">
            <tr>
                <td> Id  </td>
                <td> nom </td>
                <td> desc  </td>
                <td> prix  </td>
                <td> delete  </td>
                <td> update  </td>
            </tr>
            {% for i in games %}
                <tr>


                    <td>
                        <span class="ps-2">{{ i.getId() }} </span>
                    </td>
                    <td> {{ i.name }} </td>

                    <td> {{ i.descreption }} </td>
                    <td> {{ i.prix }} </td>
                    <td>
                        <a href="{{ path('removegames',{'id':i.id }) }}" class="badge badge-outline-danger" >Remove</a>

                    </td>
                    <td>
                        <a href="{{ path('modifygames',{'id':i.id}) }}" class="badge badge-outline-warning" >Update</a>

                    </td>

                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
