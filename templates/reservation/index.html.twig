{% extends 'baseback.html.twig' %}
{% block body %}

    <div class="card-body">
    <h4 class="card-title">reservation </h4>

{% for message in app.flashes('info') %}
    <div class="alert alert-success" >
        {{ message }}
    </div>
    {% endfor %}

    {% for message in app.flashes('info2') %}
        <div class="alert alert-danger" >
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('info3') %}
        <div class="alert alert-warning" >
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('info4') %}
        <div class="alert alert-success" >
            {{ message }}
        </div>
    {% endfor %}

    <div class="table-responsive">

    <div align="center">
        <a href="{{ path('addreservation') }}" class="badge badge-outline-success"  >add</a>
    </div>
    <div >
        <a href="{{ path('reservationlisttrie') }}" class="badge badge-outline-success"  > trier  </a>
    </div>

    <table class="table">
        <thead>
        <tr>

            <th> idreservation </th>
            <th> id_coach </th>
            <th> temps start </th>
            <th> temps end </th>
            <th> dispo  </th>
            <th> update  </th>
            <th> delete  </th>
        </tr>
        </thead>

        <tr>
            {% for i in tabeservation %}

            <td> {{ i.id }} </td>
            <td> {{ i.coach }} </td>
            <td> {{ i.tempsstart |  date("F jS Y \\a\\t g:ia") }} </td>
            <td> {{ i.tempsend | date("F jS  Y \\a\\t g:ia")  }} </td>

            <td> {{ i.dispo }}  </td>

            <td>
                <a href="{{ path('modifyreservation',{'id':i.id}) }}" class="badge badge-outline-warning" >Update</a>
            </td>
            <td>
                <a href="{{ path('removereservation',{'id':i.id }) }}" class="badge badge-outline-danger" >Remove</a>
            </td>

        </tr>


        {% endfor %}
    </table>
    <div class="navigation">
        {{ knp_pagination_render(tabeservation) }}
    </div>
    <a href="{{ path('showpdfReser') }}">pdf</a>
    <a href="{{ path('exportExcelReser') }}">excel</a>


{% endblock %}