                </td>
            </tr>
            <tr>

                <td>
                    {{ form_label(formReservation.dispo,"dispo") }}
                </td>
                <td>
                    {{ form_widget(formReservation.dispo)}}
                    {{ form_errors(formReservation.dispo) }}
                </td>
            </tr>

            <tr>
                <td></td>
                <td>
                    {{ form_end(formReservation) }}
                </td>
            </tr>

        </table>
        {% endblock %}