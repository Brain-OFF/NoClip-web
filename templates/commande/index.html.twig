{% extends 'baseback.html.twig' %}

{% block title %}Commande index {% endblock %}

{% block body %}
    <p style="100px" > <input  id="myInput"  type="text" placeholder="search">
    <h1 align="center">Les Commandes</h1>

    <a href="{{path('TrierParDateDESC') }}" class="btn btn-warning"><i class="align-middle" ></i>trier par date</a>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table">
        <thead>

        <tr>

            <td >Nom</td>
            <td>Prenom</td>
            <td>Email</td>
            <td>Numerotelephone</td>
            <td>Adresse</td>
            <td>Produits</td>
            <td>User</td>
            <td>Total</td>
            <td>Date</td>
            <td>Edit</td>
        </tr>
        </thead>
        <tbody>


        <tbody id="myTable">
        {% for command in commandes %}

            <tr>


                <td>{{ command.nom}}</td>
                <td>{{ command.prenom }}</td>
                <td>{{ command.email }}</td>

                <td>{{ command.numtelephone }}</td>
                <td>{{ command.adresse }}</td>


                <td>
                    {% set foo = '' %}
                    {% for p in command.listP %}
                        {{   p.name ~ ':' ~ command.Quantite[loop.index-1]  ~ foo ~'/' }}
                    {% endfor %}

                </td>
                <td>{{ command.user }}</td>
                <td>{{ command.totalCost }}</td>

                <td></td>

                <td>
                <a href="{{ path('modifiercommandeback',{'id':command.id}) }}" class="btn btn-warning">update</a>
                    {{ include('commande/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

{% endblock %}

{% block footer %}



{% endblock %}
