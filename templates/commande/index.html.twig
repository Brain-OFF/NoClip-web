{% extends 'baseback.html.twig' %}

{% block title %}Commande index {% endblock %}

{% block body %}
    <h1 align="center">Les Commandes</h1>

    <a href="{{path('TrierParDateDESC') }}" class="btn btn-warning"><i class="align-middle" ></i>trier par date</a>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <table class="table">
        <thead>

        <tr>

            <td >Nom</td>
            <td>Prenom</td>
            <td>Email</td>
            <td>Numerotelephone</td>
            <td>Adresse</td>
            <td>Produits</td>
            <td>Total</td>
            <td>Date</td>
            <td>delete</td>
            <td>update</td>
        </tr>
        </thead>
        <tbody>
        {% for command in commandes %}

            <tr>


                <td>{{ command.nom}}</td>
                <td>{{ command.prenom }}</td>
                <td>{{ command.email }}</td>

                <td>{{ command.numtelephone }}</td>
                <td>{{ command.adresse }}</td>


                <td>
                    {% set foo = '' %}
                    {% for p in command.listP %}
                        {{   p.name ~ ':' ~ command.Quantite[loop.index-1]  ~ foo ~'/' }}
                    {% endfor %}

                </td>
                <td>{{ command.totalCost }}</td>

                <td>{{ command.dateCommande ? command.dateCommande|date('Y-m-d ') : '' }}</td>
                <td>{{ include('commande/_delete_form.html.twig') }}</td>

                <td>
                <a href="{{ path('modifiercommandeback',{'id':command.id}) }}" class="btn btn-warning">update</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block footer %}
{% endblock %}
