{% extends 'baseback.html.twig' %}

{% block title %}Hello GamesController!{% endblock %}

{% block body %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div align="center">
        <a href="{{ path('addpromos') }}" class="badge badge-outline-success"  >add</a>
    </div>
<div align="center">
    <a href="{{ path('showTrPromos') }}" class="badge badge-outline-success"  >tri</a>    </div>
<div class="example-wrapper">
    <div class="example-wrapper">
        <h1>games </h1>
        <p style="100px" > <input  id="myInput"  type="text" placeholder="search">


        <table class="table">
            <tr>
                <td> Id  </td>
                <td> nom </td>
                <td> date fin  </td>

            </tr>
            <tbody id="myTable">
            {% for i in promos %}
                <tr>


                    <td>
                        <span class="ps-2">{{ i.getId() }} </span>
                    </td>
                    <td> {{ i.name }} </td>

                    <td > {{ i.datefin|date("m/y/d")}} </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
