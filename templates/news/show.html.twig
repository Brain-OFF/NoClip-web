










{% extends 'base.html.twig' %}{% block body %}

    <!-- START: Table -->
    <div class="container">
        <h3 class="text-main-1" align="center">News</h3>
        <div class="nk-gap"></div>
        <table class="nk-table">

            <thead>


                <th>Categorie</th>
                <th>image</th>

                <th>Titre</th>
                <th>Text</th>
                <th>Jeu</th>
                <th>Date</th>
                <th>vote</th>




            </thead>
            <tbody>
            <tr>
                {% for new in news %}


                <td >

                    {{ new.categorie}}
                </td>

                <td>{% for image in new.image %}
                        <img src="{{ asset ('/uploads/' ~ image.name ) }}"

                         class="align-center"    alt="image" width="50">
                    {% endfor %}
                </td>


                <td>{{ new.Titre }}</td>
                <td>{{ new.Text }}</td>
                <td>{{ new.jeu }}</td>
                <td>{{ new.Date ? new.Date|date('Y-m-d') : '' }}</td>

                <td>
                    <div class="wrapper">
                        {% set K=1 %}
                        {% if liked is empty %}
                        <a type="button" class="btn btn-success" href="{{ path('like',{'id':new.id}) }}">ğŸ‘</a>
                        <a type="button" class="btn btn-danger" href="{{ path('dislike',{'id':new.id}) }}">ğŸ‘</a>
                        {% else %}
                        {% for like in liked %}
                        {% if like.Article==new and like.status=='L' %}
                            <a type="button" class="btn btn-outline-success" href="{{ path('like',{'id':new.id}) }}">ğŸ‘</a>
                            {% set K=0 %}
                        {% endif %}
                        {% endfor %}
                        {% if K==1 %}
                            <a type="button" class="btn btn-success" href="{{ path('like',{'id':new.id}) }}">ğŸ‘</a>
                        {% endif %}
                            {% set K=1 %}
                        {% for like in liked %}
                        {% if like.Article==new and like.status=='D' %}
                            <a type="button" class="btn btn-outline-danger" href="{{ path('dislike',{'id':new.id}) }}">ğŸ‘</a>
                            {% set K=0 %}
                        {% endif %}
                        {% endfor %}
                        {% if K==1 %}
                            <a type="button" class="btn btn-danger" href="{{ path('dislike',{'id':new.id}) }}">ğŸ‘</a>
                        {% endif %}
                        {% endif %}
                        {{  get_ratio(liked, new) }}
                    </div>

                </td>
            </tr>


            </tbody>

            {% endfor %}
        </table>
    </div>
{% endblock %}